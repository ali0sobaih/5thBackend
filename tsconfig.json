
{
"compilerOptions": {
    "target": "es2016",                        
    "module": "commonjs",                      
    "rootDir": "./",                        
    "outDir": "./dist",                        
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                            
    "skipLibCheck": true,                      
    "resolveJsonModule": true,                 
    "declaration": true  ,
    "typeRoots": ["./node_modules/@types", "./src/types"]                       
},
"include": ["src/**/*.ts"],                   
"exclude": ["node_modules"]                 
}
    